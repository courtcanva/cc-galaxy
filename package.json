{
  "name": "cc-galaxy",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "eslint": "eslint . --ext .ts",
    "prettier": "prettier -c .prettierrc \"src/{__tests__,pages,store,components}/**/*.{js,jsx,ts,tsx}\" --write",
    "test": "jest --colors --config jest.config.js --maxWorkers=50%",
    "test:watch": "jest --colors --config jest.config.js --watch --maxWorkers=25%",
    "test:ci": "CI=true jest --colors --config jest.config.js --runInBand --coverage",
    "coverage": "jest --coverage",
    "typecheck": "tsc --project tsconfig.json --pretty --noEmit",
    "prepare": "husky install",
    "pre-commit": "yarn prettier && yarn lint && yarn typecheck && yarn test && npx --no-install lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,json,md}": [
      "git add ."
    ],
    "*.{js,jsx,ts,tsx}": [
      "yarn eslint",
      "git add ."
    ]
  },
  "dependencies": {
    "@chakra-ui/icons": "^1.1.7",
    "@chakra-ui/react": "2.3.1",
    "@emotion/react": "11.10.4",
    "@emotion/styled": "11.10.4",
    "@reduxjs/toolkit": "^1.8.1",
    "@svgr/webpack": "6.3.1",
    "axios": "^0.27.2",
    "framer-motion": "7.2.1",
    "next": "12.2.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-redux": "^8.0.2",
    "styled-components": "5.3.5"
  },
  "devDependencies": {
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-conventional": "17.1.0",
    "@testing-library/dom": "8.17.1",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@testing-library/user-event": "14.4.3",
    "@types/node": "18.7.15",
    "@types/react": "18.0.18",
    "@types/react-dom": "18.0.6",
    "@types/styled-components": "5.1.26",
    "@typescript-eslint/eslint-plugin": "5.36.2",
    "eslint": "8.23.0",
    "eslint-config-google": "0.14.0",
    "eslint-config-next": "12.2.5",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "27.0.1",
    "eslint-plugin-react": "7.31.7",
    "husky": "8.0.1",
    "jest": "29.0.2",
    "jest-environment-jsdom": "29.0.2",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "react-icons": "4.4.0",
    "typescript": "4.8.2"
  }
}
